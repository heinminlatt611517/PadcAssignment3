<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="250dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="180dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/hotelthree" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_bookmark_foreground" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="5dp"
                    android:backgroundTint="@color/color_violent"
                    android:text="$99/day"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="bottom|right"/>

                <RatingBar
                    android:id="@+id/rrating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_gravity="bottom|start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1"
                    android:rating="1"
                    android:stepSize="1"
                    android:layout_margin="20dp"
                    android:theme="@style/RatingBar"
                    />

                <TextView
                    android:id="@+id/rtxt_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="40dp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="20dp"/>

            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel"
                android:layout_marginLeft="12dp"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mandalay , Myanmar"
                android:layout_marginLeft="12dp"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="180dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/hotelfive" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_bookmark_foreground" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="5dp"
                    android:backgroundTint="@color/color_violent"
                    android:text="$99/day"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="bottom|right"/>

                <RatingBar
                    android:id="@+id/rrating1"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_gravity="bottom|start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1"
                    android:rating="1"
                    android:stepSize="1"
                    android:layout_margin="20dp"
                    android:theme="@style/RatingBar"
                    />

                <TextView
                    android:id="@+id/rtxt1_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="40dp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="20dp"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel"
                android:layout_marginLeft="12dp"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taung Gyi , Myanmar"
                android:layout_marginLeft="12dp"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"/>
        </LinearLayout>

    </LinearLayout>


</HorizontalScrollView>